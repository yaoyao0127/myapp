/* bookItem.wxss */
/* 顶部选项栏 */
.bar {
  height:30px;
  line-height: 30px;
  width:100%;
  background-color: rgba(232,154,184,0.5);
  color:black;
  position: relative;
}
#lastbtn {
  position: absolute;
  display: inline-block;
  margin-left: 20px;
}
#settingbtn {
  position: absolute;
  display: inline-block;
  margin-left: 185px;
}
#nextbtn {
  position: absolute;
  display: inline-block;
  margin-left: 335px;
}
/* 内容区 */
.content {
  width: 414px;
  height:605px;
  margin: 0px auto;
  position: relative;
}
.hiddenSetting {
  width: 414px;
  height: 200px;
  display: block;
  background-color: rgba(0,0,0,0.8);
  position: absolute;
  margin-top:0px;
  margin-left:0px;
  z-index:10000;
  text-align: center;
  color: white;
}
.text {
  width: 390px;
  height: 570px;
  background-color: white;
  position: absolute;
  margin-left:20px;
  z-index:-1;
}
/* 设置区 */
.settingLine{
  margin-top:20px;
}
.settingTitle{
  display: inline-block;
  margin-right: 20px;
}
.settingOption{
  display: inline-block;
}
.submitSetting{
  width:50px;
}